<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-42dp"
        tools:layout_editor_absoluteY="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/p1" />

            <Button
                android:id="@+id/btn_link"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:onClick="Comprar"
                android:text="C1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/p2" />

            <Button
                android:id="@+id/btn_link2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="Comprar"
                android:text="C2" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_3" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/p3" />

            <Button
                android:id="@+id/btn_link3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="Comprar"
                android:text="C3" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/p4" />

            <Button
                android:id="@+id/btn_link4"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:onClick="Comprar"
                android:text="C4" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/p5" />

            <Button
                android:id="@+id/btn_link5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="Comprar"
                android:text="C5" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>